<div class="cart-title"><%= t('layout.cart.title') %></div>
<table>
  <%= render :partial => 'cart_item', :collection => @cart.items %>

  <tr class="total-line">
    <td colspan="2">Total</td>
    <td class="total-cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>

<%= button_to t('layout.cart.button.empty'), :action => "empty_cart" %>
<%= button_to t('layout.cart.button.checkout'), :action => "checkout" %>